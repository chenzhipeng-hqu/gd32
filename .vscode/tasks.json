{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "openocd",
            "type": "shell",
            "command": "openocd -f /usr/share/openocd/scripts/interface/cmsis-dap.cfg -f /usr/share/openocd/scripts/target/stm32f4x.cfg",
        },
        {
            "dependsOn":"build",
            "label": "openocd_debug",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                "/usr/share/openocd/scripts/target/stm32f4x.cfg",
            ],
            "problemMatcher": []
        },
        {
            "dependsOn":"build",
            "label": "openocd_flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                "/usr/share/openocd/scripts/target/stm32f4x.cfg",
                "-c",
                "program rtthread.elf",
                "-c",
                "reset",
                "-c",
                "shutdown"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j8"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j8",
                "-c"
            ]
        }
    ]
}